<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
  <group android:scaleX="0.55"
      android:scaleY="0.55"
      android:translateX="24.3"
      android:translateY="24.3">

      <!-- Outer rainbow ring -->
      <path
          android:pathData="M54,54m-45,0a45,45 0,1 1,90 0a45,45 0,1 1,-90 0">
          <aapt:attr name="android:fillColor">
              <gradient
                  android:type="sweep"
                  android:centerX="54"
                  android:centerY="54"
                  android:startColor="#E91E63"
                  android:endColor="#E91E63">
                  <item android:offset="0.0" android:color="#E91E63"/>
                  <item android:offset="0.15" android:color="#9C27B0"/>
                  <item android:offset="0.25" android:color="#3F51B5"/>
                  <item android:offset="0.35" android:color="#2196F3"/>
                  <item android:offset="0.5" android:color="#00BCD4"/>
                  <item android:offset="0.6" android:color="#4CAF50"/>
                  <item android:offset="0.7" android:color="#8BC34A"/>
                  <item android:offset="0.8" android:color="#FFEB3B"/>
                  <item android:offset="0.9" android:color="#FF9800"/>
                  <item android:offset="0.95" android:color="#FF5722"/>
                  <item android:offset="1.0" android:color="#E91E63"/>
              </gradient>
          </aapt:attr>
      </path>

      <!-- Inner black circle (creates the ring effect) -->
      <path
          android:pathData="M54,54m-33,0a33,33 0,1 1,66 0a33,33 0,1 1,-66 0"
          android:fillColor="#000000"/>

      <!-- Subtle inner shadow for depth -->
      <path
          android:pathData="M54,54m-33,0a33,33 0,1 1,66 0a33,33 0,1 1,-66 0">
          <aapt:attr name="android:strokeColor">
              <gradient
                  android:type="radial"
                  android:centerX="54"
                  android:centerY="54"
                  android:gradientRadius="33">
                  <item android:offset="0.85" android:color="#00FFFFFF"/>
                  <item android:offset="1.0" android:color="#40000000"/>
              </gradient>
          </aapt:attr>
          <aapt:attr name="android:fillColor">
              <gradient
                  android:type="radial"
                  android:centerX="54"
                  android:centerY="54"
                  android:gradientRadius="33">
                  <item android:offset="0.0" android:color="#000000"/>
                  <item android:offset="0.7" android:color="#000000"/>
                  <item android:offset="1.0" android:color="#1A000000"/>
              </gradient>
          </aapt:attr>
      </path>
  </group>
</vector>